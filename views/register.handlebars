<center><img src="/img/logo.png" style="max-width: 20%; padding-top: 2%;"></center>
<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4">
          <div class="panel panel-default" style="border: 0px solid transparent;">
            <h2><strong>User Registration</strong></h2>
            <div class="panel-body">
              <form method="post" action="/users/register">
                <div class="form-group"><label>Full Name</label><input class="form-control" type="text" name="agent_name"></div>
                <div class="form-group"><label>UserID</label><input class="form-control" type="text" name="agent_id"></div>
                <div class="form-group"><label>E-mail Address</label><input class="form-control" type="text" name="agent_email"></div>
                <div class="form-group"><label>Password</label><input class="form-control" type="password" name="password1"></div>
                <div class="form-group"><label>Confirm Password</label><input class="form-control" type="password" name="password2"></div>
                <p><input type="submit" class="btn btn-primary btn-lg btn-block" value="Login"></p>
              </form>
            </div>
          </div>
        </div>
    </div>
    <center>
    <ul class="list-inline">
      {{#if errors}}
        {{#each errors}}
          <li class="text-danger" role="alert">{{msg}}</li>
        {{/each}}
      {{/if}}
    </ul>
   </center>
